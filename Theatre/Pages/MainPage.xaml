<Page x:Class="Theatre.Pages.MainPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
    xmlns:local="clr-namespace:Theatre.Pages.Converters"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="MainPage">
    <Page.Resources>
        <local:BoolToVisibilityConverter x:Key="BoolToVisibilityConverter" />
    </Page.Resources>
    <Grid Background="{StaticResource ColorBackground}">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <!-- Верхняя панель -->
        <Border Grid.Row="0" Background="{StaticResource ColorAccent}" Padding="10">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>

                <!-- Логотип -->
                <Image Source="/Assets/Logo.png" Width="100" VerticalAlignment="Center" Grid.Column="0">
                    <Image.Clip>
                        <EllipseGeometry Center="50,50" RadiusX="50" RadiusY="50" />
                    </Image.Clip>
                </Image>

                <!-- Текст -->
                <TextBlock Text="TheatreWatch" Foreground="Black" FontSize="20" 
                           Style="{StaticResource ModernTextBlockStyle}" HorizontalAlignment="Center" VerticalAlignment="Center"
                           Grid.Column="1" />

                <!-- Кнопка профиля -->
                <Button x:Name="ProfileButton" Style="{StaticResource ModernButtonStyle}" 
                        Width="Auto" Height="40" Click="ProfileButton_Click" Content="Профиль"  
                        Grid.Column="2" VerticalAlignment="Center" Margin="10,0,0,0">
                   
                </Button>
            </Grid>
        </Border>

        <!-- Основной контент -->
        <StackPanel Grid.Row="1" Margin="10">
            <!-- Поиск -->
            <TextBox x:Name="SearchTextBox" TextChanged="SearchTextBox_TextChanged" />

            <!-- Фильтрация и сортировка -->
            <StackPanel Orientation="Horizontal" Margin="0,10,0,10">
                <ComboBox x:Name="FilterComboBox" Width="200" Margin="0,0,10,0" SelectionChanged="FilterComboBox_SelectionChanged">
                    <ComboBoxItem Content="Все" />
                    <ComboBoxItem Content="Комедия" />
                    <ComboBoxItem Content="Драма" />
                    <ComboBoxItem Content="Мюзикл" />
                    <ComboBoxItem Content="Трагедия" />
                    <ComboBoxItem Content="Фантастика" />
                    <ComboBoxItem Content="Детектив" />
                    <ComboBoxItem Content="Исторический" />
                    <ComboBoxItem Content="Сказка" />
                    <ComboBoxItem Content="Боевик" />
                    <ComboBoxItem Content="Мелодрама" />
                </ComboBox>

                <ComboBox x:Name="SortComboBox" Width="200" SelectionChanged="SortComboBox_SelectionChanged">
                    <ComboBoxItem Content="По названию (А-Я)" />
                    <ComboBoxItem Content="По названию (Я-А)" />
                </ComboBox>
            </StackPanel>

            <!-- Список спектаклей -->
            <ScrollViewer VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Disabled">
                <ItemsControl x:Name="ImagesListBox" ItemsSource="{Binding Spectacles}">
                    <ItemsControl.ItemsPanel>
                        <ItemsPanelTemplate>
                            <WrapPanel Orientation="Horizontal" />
                        </ItemsPanelTemplate>
                    </ItemsControl.ItemsPanel>
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <Border Margin="10" Width="200">
                                <Button Background="Transparent" BorderThickness="0" Click="OpenSpectaclePage_Click">
                                    <StackPanel>
                                        <Image Source="{Binding Image}" Width="200" Height="200" Stretch="UniformToFill" />
                                        <TextBlock Text="{Binding Name}" HorizontalAlignment="Center" Margin="0,10,0,0" />
                                    </StackPanel>
                                </Button>
                            </Border>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </ScrollViewer>
        </StackPanel>

        <!-- Нижняя панель -->
        <Border Grid.Row="2" Background="{StaticResource ColorAccent}" Padding="10" Height = "60">
            <Button Content="Добавить спектакль" HorizontalAlignment="Right"
            Visibility="Visible" Name="AddSpectacleButton"
            Style="{StaticResource ModernButtonStyle}" Click="AddSpectacleButton_Click" />
        </Border>
    </Grid>
</Page>