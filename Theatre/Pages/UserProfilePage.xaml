<Page x:Class="Theatre.Pages.UserProfilePage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Theatre.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="UserProfilePage">

    <Grid Margin="20" Background="{StaticResource ColorBackground}">
        <!-- Центральная область -->
        <Grid HorizontalAlignment="Center" VerticalAlignment="Center">
            <Grid.RowDefinitions>
                <RowDefinition Height="auto"/>
                <RowDefinition Height="auto"/>
                <RowDefinition Height="auto"/>
                <RowDefinition Height="auto"/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="auto"/>
                <ColumnDefinition Width="250"/>
                <!-- Фиксированная ширина для TextBox -->
            </Grid.ColumnDefinitions>

            <!-- Логин -->
            <TextBlock Text="Логин:" 
                       Grid.Row="0" Grid.Column="0" 
                       Margin="10" 
                       HorizontalAlignment="Center" 
                       VerticalAlignment="Center"/>
            <TextBox Text="{Binding Login}" 
                     Grid.Row="0" Grid.Column="1" 
                     Margin="5" 
                     HorizontalAlignment="Center" 
                     VerticalAlignment="Center" 
                     Width="200" 
                     IsReadOnly="True"/>

            <!-- Почта -->
            <TextBlock Text="Почта:" 
                       Grid.Row="1" Grid.Column="0" 
                       Margin="5" 
                       HorizontalAlignment="Center" 
                       VerticalAlignment="Center"/>
            <TextBox Text="{Binding Email}" 
                     Grid.Row="1" Grid.Column="1" 
                     Margin="5" 
                     HorizontalAlignment="Center" 
                     VerticalAlignment="Center" 
                     Width="200" 
                     IsReadOnly="True"/>

            <!-- Кнопка "На главную" -->
            <Button Content="На главную" 
                    Grid.Row="3" Grid.Column="1" 
                      Width="240"
                    Style="{StaticResource ModernButtonStyle}"  
                    HorizontalAlignment="Right" 
                    Click="GoBackButton_Click"/>
        </Grid>
    </Grid>
</Page>